<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="119dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_historia"
            android:layout_width="311dp"
            android:layout_height="match_parent"
            android:src="@drawable/no_foto" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_historia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre historia"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/descripcion_historia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aqui va una descripcion de la historia y bla bla bla"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/num_laminas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Numero de laminas"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/dificultad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Dificultad"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>